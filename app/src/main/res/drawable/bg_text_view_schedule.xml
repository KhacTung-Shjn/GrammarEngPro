<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="oval">
            <size android:width="@dimen/dp_40" android:height="@dimen/dp_40" />
            <stroke android:width="@dimen/dp_1" android:color="@android:color/holo_blue_dark" />
            <solid android:color="@color/colorMain" />
        </shape>
    </item>
    <item android:state_selected="false">
        <shape android:shape="oval">
            <size android:width="@dimen/dp_40" android:height="@dimen/dp_40" />
            <stroke android:width="@dimen/dp_1" android:color="@color/colorMain" />
        </shape>
    </item>
</selector>